(defun my/c-hook()
	(global-set-key (kbd "<f6>") 'gud-gdb)
	(local-set-key (kbd "<C-S-iso-lefttab>") 'semantic-ia-complete-symbol-menu)
	(local-set-key (kbd "C-.") 'semantic-ia-fast-jump)
	(ecb-activate)
	(if (>= emacs-major-version 24)
			(progn
				(cppcm-reload-all)
				))
	)
(add-hook 'c++-mode-hook 'my/c-hook)
(add-hook 'c-mode-hook 'my/c-hook)

(global-ede-mode 1)

(add-to-list 'load-path "~/.emacs.d/lisp/move-border/")
(require 'move-border)

(defun todoo-or-close-todoo()
  (interactive)
  (if (eq major-mode 'todoo-mode)
      (call-interactively 'todoo-save-and-exit)
    (call-interactively 'todoo)))

(add-hook 'comint-mode-hook
					(lambda()
						(local-set-key (kbd "<up>") 'comint-previous-input)
						(local-set-key (kbd "<down>") 'comint-next-input)
						)
					)

(defun my/python-hook()
	(if (< emacs-major-version 24)
			(progn
				(add-to-list 'load-path "/usr/share/emacs/site-lisp/yasnippet/")
				(require 'yasnippet)))
  (yas/initialize)
	
	;; (setq ac-sources '(ac-source-pycomplete
	;; 									 ac-source-yasnippet
	;; 									 ac-source-abbrev
	;; 									 ac-source-dictionary
	;; 									 ac-source-words-in-same-mode-buffers)
	(global-set-key (kbd "<backtab>") 'auto-complete)
	(setq py-smart-indentation t)
	)
(add-hook 'python-mode-hook 'my/python-hook)

(defun my/django-mode()
	(python-mode t)

  (add-to-list 'load-path "~/.emacs.d/lisp/django-mode/")
  (require 'django-html-mode)
  (require 'django-mode)
  (yas/load-directory "/home/pawel/.emacs.d/lisp/django-mode/snippets")
  (add-to-list 'auto-mode-alist '("\\.djhtml$" . django-html-mode))
  )

