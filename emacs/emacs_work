;; customisation of modes
(defun my/semantic-hook ()
	(add-to-list 'ac-sources 'ac-source-semantic)
	;; (add-to-list 'ac-sources 'ac-source-clang)
  )
(add-hook 'c-mode-common-hook 'my/semantic-hook)
(add-hook 'c++-mode-common-hook 'my/semantic-hook)
