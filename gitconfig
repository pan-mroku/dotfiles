[merge]
	tool = kdiff3
[mergetool "diffuse"]
	cmd = "diffuse -b"		
[push]
	default = tracking
[color]
	ui = auto
[alias]
	diffw = diff -w
	l = log --graph
	lp = log --graph --follow -p
	lc = log --follow --pretty=format:'%h %<(20)%Cred%an %Cgreen%s'
	changes = log --pretty=format:\"%h\"
	s = status -sb
[log]
	decorate = true
